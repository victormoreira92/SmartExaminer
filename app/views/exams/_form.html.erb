<%= form_with(model: exam, class:'py-2')  do |form|  %>
  

  <div class="form-row">
    <div class="form-group col-md-11">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "form-control", max: 50,  placeholder:"Exam title" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-11">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description, class: "form-control", max: 100, placeholder:"Exam title" %>
    </div>
  </div>
  <div>
    <% if exam.id.nil? %>
      <%= form.submit 'Create exam', class:"btn btn-primary" %>
    <% else %>
      <%= form.submit 'Edit exam', class:"btn btn-primary" %>
    <% end %>
  </div>
<% end %>
