  <%= render 'sharing/sidebar' %>
  <div class="col-md-9 ">
    <%= render 'sharing/nav' %>

    <div class="container-fluid pb-4">
      <div class="row">
        <div class="col-lg-12 pb-lg-2">
          <div class="card px-2 py-1">
            <div class="card-body p-0 d-flex justify-content-lg-between">
              <div class="card-text">
                <label class="font-weight-normal">Categories:</label>
                <select>
                  <option>XXX</option>
                  <option>XXX</option>
                  <option>XXX</option>
                </select>
              </div>
              <div class="card-text">
                <label class="font-weight-normal">Categories:</label>
                <select>
                  <option>XXX</option>
                  <option>XXX</option>
                  <option>XXX</option>
                </select>
                <input type="text">
              </div>
            </div>
          </div>
        </div>
        
<% @exams.each do |exam| %>
        <div class="col-lg-6 p-2" style="min-heigth: 200px">
          <div class="card">
            <div class="card-header py-1 h-auto bg-white d-inline-flex justify-content-lg-between">
              <div class="d-flex">
            <span class="p-1 mt-md-1 mb-md-1 border border-success text-success font-weight-bold" style="font-size: 10px;">
            Active
          </span>
                <span class="p-2 font-weight-bold" style="font-size: 12px" ><%= exam.created_at %></span>
              </div>
                <div>
                  <div class="dropdown">
                    <button class="btn h2 dropdown-toggle" type="button" id="dropdownMenuButton<%= exam.id %>" data-target="dropdown<%=exam.id %>" data-toggle="dropdown" aria-expanded="false">
                      ...
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdown<%=exam.id %>" >
                      <a class="dropdown-item" href=<%= exam_path(exam.id) %>>Show Exam</a>
                      <a class="dropdown-item" href=<%= edit_exam_path(exam.id) %>>Edit</a>
                      <%= link_to "Delete", exam_path(exam.id), data: { toggle: "modal", target: "#exam#{exam.id}", exam: exam.id }, class:"dropdown-item" %>                 
                      </div>
                  </div>
                </div>
              </div>
            <div class="card-body p-3">
              <div class="card-title">
                <h6 class="font-weight-bold"><%= exam.title %></h6>
              </div>
              <p class="card-text" style="font-size: 16px"><%= exam.description.empty? ? "(Not description)" : exam.description %></p>
              <p class="card-text h6 p-1 border border-secondary font-weight-bold text-lg-center text-secondary" style="margin-left: 50%; font-size: 16px">
                UNCATEGORIZED
              </p>
            </div>
          </div>
        </div>
        <div class="modal fade" id=<%= "exam#{exam.id}" %> tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <h6>Deleting test and results</h6>
        <p style="font-size: 16px;">Are you sure you want to<span class="text-danger"> permanently </span>delete selected tests and collected results (respondents will be unable to access them as well)?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="font-size: 16px;">Close</button>
        <%= button_to "Destroy this exam",exam_path(exam.id),method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
<% end %>
        
      </div>
    </div>
  </div>
