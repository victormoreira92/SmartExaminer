<div class="container py-3">
  <h2>SmartExaminer Registration</h2>
  <p class="text">Fill in with your access data and gain access</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container border border-dark border-3 pb-4 pt-2 px-3">
    <div class="row py-4">
       <div class="col px-2">
        <%= f.label :first_name,'First Name *', class:"font-weight-bold py-1" %><br />
        <%= f.text_field :first_name, autofocus: true, class:"form-control", value:"Teacher 1"%>
       </div>
       <div class="col px-2">
        <%= f.label :last_name, 'Last Name *',class:"font-weight-bold py-1" %><br />
        <%= f.text_field :last_name, autofocus: true, class:"form-control", value:"Paula"%>
       </div>
    </div>
    <div class="row py-4">
        <div class="col">
        <%= f.label :username,'Username *' ,class:"font-weight-bold" %><br />
        <%= f.text_field :username, autofocus: true, class:"form-control", value:"teacher22" %>
       </div>
      <div class="col">
        <%= f.label :email, 'Email *', class:"font-weight-bold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>
    <div class="row py-4">
      <div class="col">
        <%= f.label :password, class:"font-weight-bold" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", value:"123456" %>
      </div>

      <div class="col">
        <%= f.label :password_confirmation, 'Password Confirmation *', class:"font-weight-bold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", value:"123456" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= f.submit "Register", class:"btn btn-info btn-lg" %>
    </div>
  </div>
</div>
  
<% end %>
</div>
